<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/cloth_iv"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"/>
    <TextView
        android:id="@+id/cloth_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_999999"
        android:text="1111"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cloth_iv"
        app:layout_constraintLeft_toLeftOf="@id/cloth_iv"
        android:layout_marginTop="@dimen/dp_4"/>
    <TextView
        android:id="@+id/cloth_name"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:textColor="@color/black"
        android:text="1111"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/cloth_brand"
        app:layout_constraintLeft_toLeftOf="@id/cloth_iv"
        android:layout_marginTop="@dimen/dp_4"/>
    <TextView
        android:id="@+id/cloth_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="원"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/cloth_name"
        app:layout_constraintLeft_toLeftOf="@id/cloth_iv" />

    <TextView
        android:id="@+id/cloth_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:text="성별"
        android:textColor="@color/color_999999"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cloth_name"
        app:layout_constraintRight_toRightOf="@id/cloth_iv"
        android:layout_marginBottom="4dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>