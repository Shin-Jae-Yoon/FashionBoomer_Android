<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/like_toolbar"
        style="@style/toolbarStyle"/>
    <ImageView
        android:id="@+id/cloth_iv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/re_toolbar"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"/>
    <TextView
        android:id="@+id/cloth_categoryDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리 > 디테일"
        android:textSize="15dp"
        android:textColor="@color/color_999999"
        app:layout_constraintTop_toBottomOf="@+id/cloth_iv"
        app:layout_constraintLeft_toLeftOf="@id/cloth_iv"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/cloth_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_999999"
        android:text="브랜드"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/cloth_iv"
        app:layout_constraintLeft_toRightOf="@id/cloth_categoryDetails"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/cloth_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="상품명"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/cloth_brand"
        app:layout_constraintLeft_toLeftOf="@id/cloth_iv"
        android:layout_marginTop="4dp"/>
    <TextView
        android:id="@+id/cloth_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="가격"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cloth_name"
        app:layout_constraintLeft_toLeftOf="@id/cloth_iv" />

    <TextView
        android:id="@+id/cloth_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="성별"
        android:textColor="@color/color_999999"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/cloth_name"
        app:layout_constraintRight_toRightOf="@id/cloth_iv"
        android:layout_marginBottom="4dp"/>

    <Button
        android:id="@+id/cloth_link"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:text="구매 링크"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cloth_insta"
        app:layout_constraintTop_toBottomOf="@id/cloth_gender" />

    <Button
        android:id="@+id/cloth_insta"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:text="브랜드 둘러보기"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@id/cloth_link"
        app:layout_constraintTop_toBottomOf="@+id/cloth_gender"
        app:layout_constraintRight_toRightOf="parent"/>
